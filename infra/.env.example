# Copy to infra/.env and customize before running docker compose.
# These settings drive the VPS deployment.

# Database credentials (must match API connection details)
PANELYT_DB_NAME=panelyt
PANELYT_DB_USER=panelyt_app
PANELYT_DB_PASSWORD=change-me
# Expose Postgres on the host (optional; comment out to disable)
PANELYT_DB_PORT=5432

# FastAPI configuration
PANELYT_DB_SCHEMA=panelyt
PANELYT_DATABASE_URL=postgresql+psycopg2://panelyt_app:change-me@db:5432/panelyt
PANELYT_TIMEZONE=Europe/Warsaw
PANELYT_CORS_ORIGINS=https://your-domain.example.com
PANELYT_INGESTION_STALENESS_THRESHOLD_HOURS=3
PANELYT_INGESTION_USER_ACTIVITY_WINDOW_HOURS=24
PANELYT_ADMIN_USERNAMES=admin
PANELYT_TELEGRAM_BOT_TOKEN=
PANELYT_TELEGRAM_API_SECRET=
PANELYT_TELEGRAM_BOT_USERNAME=panelyt_bot
PANELYT_TELEGRAM_BOT_LINK_URL=
PANELYT_TELEGRAM_LINK_TOKEN_TTL_MINUTES=30
PANELYT_TELEGRAM_TIMEOUT_SECONDS=10

# Public + internal API URLs
PANELYT_PUBLIC_API_URL=https://your-domain.example.com/api
PANELYT_INTERNAL_API_URL=http://api:8000

# Published ports on the VPS host
PANELYT_API_PORT=8002
PANELYT_WEB_PORT=3002
